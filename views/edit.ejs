<%- include('./partials/header', {title}) %>

    <body>
        <header class="h-25 pb-5">
            <%- include('./partials/navbar') %>
                <div class="container text-white text-center">
                    <h1 class="mt-5 pt-3">
                        الاعدادات
                    </h1>
                    <p class="mt-3">
                        <a href="/user" class="nav-link text-light">الصفحة الرئيسية<i class="bx bx-left-arrow"></i> الاعدادات</a>
                    </p>
                </div>
        </header>

        <% if (typeof message != "undefined" && message) { %>
            <h5 class="text-center text-info alert alert-danger p-4">
                <%= message %> 
            </h5>
        <% } %>
    
        <form class="card w-75 border-0 me-auto ms-auto p-2 p-lg-5" id="edit" method="post" action="/user/edit?_method=PATCH">
            <h1 class="text-center text-bro">
               الاعدادات
            </h1>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-user fs-4"></i>
                    </div>
                </div>
                <input type="text" name="username" class="form-control" placeholder="اسم المستخدم">
            </div>

            <% if (typeof error != "undefined" && error) { %>
                <span class="text-bro fs-6 text-center"><%= error.email %> </span>
            <% } %>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-envelope fs-4"></i>
                    </div>
                </div>
                <input type="email" name="email" class="form-control" placeholder="البريد الالكتروني">
            </div>
            <input type="submit" value="حفظ" class="btn btn-bro w-25 m-auto">
        </form>

        <form class="card w-75 me-auto border-0 ms-auto p-2 p-lg-5" id="updatePassword" method="post" action="/user/updatePassword?_method=PATCH">
            <% if (typeof currentPassword != "undefined" && currentPassword ) { %>
                <span class="text-bro fs-6 text-center"><%= currentPassword %> </span>
            <% } %>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-lock fs-4"></i>
                    </div>
                </div>
                <input type="password" name="currentPassword" class="form-control" placeholder="كلمة السر الحالية">
            </div>

            <% if (typeof error != "undefined" && error.password ) { %>
                <span class="text-bro fs-6 text-center"><%= error.password %> </span>
            <% } %>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-lock fs-4"></i>
                    </div>
                </div>
                <input type="password" name="password" class="form-control" placeholder="كلمة السر الجديدة">
            </div>

            <% if (typeof error != "undefined" && error) { %>
                <span class="text-bro fs-6 text-center"><%= error.passwordConfirm %> </span>
            <% } %>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-lock fs-4"></i>
                    </div>
                </div>
                <input type="password" name="passwordConfirm" class="form-control" placeholder="تاكيد كلمة السر">
            </div>

            <input type="submit" value="حفظ" class="btn btn-bro w-25 m-auto">

        </form>
       
        <%- include('./partials/footer') %>


        <!-- <script src="/js/update.js"></script> -->

    </body>

    </html>