<%- include('./partials/header', {title}) %>

    <body>
        <header class="h-25 pb-5">
            <%- include('./partials/navbar') %>
                <div class="container text-white text-center">
                    <h1 class="mt-5 pt-3">
                        انشاء حساب جديد
                    </h1>
                    <p class="mt-3">
                        <a href="/" class="nav-link text-light">الصفحة الرئيسية<i class="bx bx-left-arrow"></i> انشاء حساب</a>
                    </p>
                </div>
        </header>


        <form class="card w-75 me-auto ms-auto p-2 p-lg-5" id="myForm" method="post" action="/signup">
            <h1 class="text-center text-bro">
                انشاء حساب جديد
            </h1>

            <% if (typeof error != "undefined" && error) { %>
                <span class="text-bro fs-6 text-center"><%= error.username %> </span>
            <% } %>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-user fs-4"></i>
                    </div>
                </div>
                <input type="text" name="username" required class="form-control" placeholder="اسم المستخدم">
            </div>

            <% if (typeof error != "undefined" && error) { %>
                <span class="text-bro fs-6 text-center"><%= error.email %> </span>
            <% } %>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-envelope fs-4"></i>
                    </div>
                </div>
                <input type="email" name="email" required class="form-control" placeholder="البريد الالكتروني">
            </div>

            <% if (typeof error != "undefined" && error.password ) { %>
                <span class="text-bro fs-6 text-center"><%= error.password %> </span>
            <% } %>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-lock fs-4"></i>
                    </div>
                </div>
                <input type="password" name="password" required class="form-control" placeholder="كلمة السر">
            </div>

            <% if (typeof error != "undefined" && error) { %>
                <span class="text-bro fs-6 text-center"><%= error.passwordConfirm %> </span>
            <% } %>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-lock fs-4"></i>
                    </div>
                </div>
                <input type="password" name="passwordConfirm" required class="form-control" placeholder="تاكيد كلمة السر">
            </div>

            <input type="submit" value="انشاء" class="btn btn-bro w-25 m-auto">

                <a class="nav-link text-center" href="/login">
                    تسجيل الدخول
                </a>
        </form>
       
        <%- include('./partials/footer') %>

    </body>

    </html>