<%- include('./partials/header', {title}) %>

    <body>
        <header class=" pb-5">
            <%- include('./partials/navbar') %>
                <div class="container text-white text-center">
                    <h1 class="mt-5 pt-3">
                        اتصل بنا
                    </h1>
                    <p class="mt-3">
                        <a href="/" class="nav-link text-light">الصفحة الرئيسية<i class="bx bx-left-arrow"></i> اتصل بنا</a>
                    </p>
                </div>
        </header>


        <div class="d-flex container text-center flex-wrap justify-content-center gap-4 m-auto  mb-3">
            <div class="card p-4">
                <i class="bx bx-phone btn btn-bro fs-1 w-75 m-2 "></i>
                <strong class="d-block">هاتفنا</strong>
                <a href="tel:+447912345667"  class="nav-link text-dark">+447912345667</a>
            </div>

            <div class="card p-4">
                <i class="bx bx-envelope btn btn-bro fs-1 w-75 m-2"></i>
                <strong class="d-block">بريدنا</strong>
                <a href="mailto:info@bitcash.coin" class="nav-link text-dark">info@bitcash.coin</a>
            </div>
        </div>


        <form class="card w-75 me-auto ms-auto p-2 p-lg-5" method="post" action="/contacts">
            <% if (typeof message != "undefined" && message) { %>
                <h5 class="text-center text-info alert alert-danger p-4">
                    <%= message %> 
                </h5>
            <% } %>
            <p class="mt-3 text-bro fs-4">
               <i class="bx bx-left-arrow"></i> اتصل بنا
            </p>
           <div>
               <h1>ارسل  لنا رسالة</h1>

               <p class="text-dark-50">
                   نحن مستعدون دائما لللمساعدة، هناك طرق عديدة للاتصال بنا، <br> يمكنك الكتابة إلينا، والاتصال بنا، وإرسال بريد إلكتروني
               </p>
           </div>
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text  btn-bro">
                                <i class="bx bx-envelope fs-4"></i>
                            </div>
                        </div>
                        <input type="text" name="name" class="form-control" placeholder="اسمك">
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text  btn-bro">
                                <i class="bx bx-envelope fs-4"></i>
                            </div>
                        </div>
                        <input type="email" name="email" class="form-control" placeholder="بريدك الالكتروني">
                    </div>
                </div>
            </div>

            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  h-100 btn-bro">
                        <i class="bx bx-lock fs-4"></i>
                    </div>
                </div>
                <textarea name="message" class="form-control" placeholder="رسالتك"></textarea>
            </div>

            <input type="submit" value="ارسال" class="btn btn-bro m-auto">
        </form>
       
        <%- include('./partials/footer') %>
    </body>


    </html>