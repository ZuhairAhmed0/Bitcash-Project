                </section>
                <section class="col-11 col-sm-5 col-lg-4 text-dark fs-5 bg-white">
                    <p>
                        <strong>مستثمر</strong>
                        <br>
                        <span class="text-bro">
                            <%= userData.investor || 0 %> روبل
                        </span>
                    </p>
                    <img src="/img/service8.png" alt="" height="70" width="70">
                </section> 
            </div>
