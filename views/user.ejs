<%- include('./partials/header', {title}) %>

    <body>
        <header class="user">
            <%- include('./partials/navbar') %>
                <div class="container pt-5">
                    <span class="text-white btn btn-danger fw-bold">
                        مرحب بك اسم المستخدم الخاص بك
                        <i class="bx bx-user"></i>
                        <%= userData.username %> 
                    </span>
                    <p class="mt-2 text-center">
                        <a href="/user" class="nav-link text-light">الصفحة الرئيسية<i class="bx bx-left-arrow"></i>الخزانة</a>
                    </p>

                    <%- include('./partials/menu-item') %>
                        
                </div>
        </header>



        <div class="container user-palance d-flex justify-content-center">
            <div class="row">
                <section class="col-11 col-sm-5 col-lg-4 text-dark fs-5 bg-white">
