<%- include('./partials/header', {title}) %>

    <body>
        <header class="h-25 pb-5">
            <%- include('./partials/navbar') %>
                <div class="container text-white text-center">
                    <h1 class="mt-5 pt-3">
                        تسجيل الدخول
                    </h1>
                    <p class="mt-3">
                        <a href="/" class="nav-link text-light">الصفحة الرئيسية<i class="bx bx-left-arrow"></i> تسجيل الدخول</a>
                    </p>
                </div>
        </header>


        <form class="card w-75 me-auto ms-auto p-2 p-lg-5" method="post" action="/login">
            <h1 class="text-center text-bro">
                تسجيل الدخول
            </h1>
            <% if (typeof message != "undefined" && message) { %>
                <span class="text-bro fs-6 text-center"><%= message %> </span>
            <% } %>
            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-envelope fs-4"></i>
                    </div>
                </div>
                <input type="email" required name="email" class="form-control" placeholder="البريد الالكتروني">
            </div>
            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text  btn-bro">
                        <i class="bx bx-lock fs-4"></i>
                    </div>
                </div>
                <input type="password" required name="password" class="form-control" placeholder="كلمة السر">
            </div>

            <input type="submit" value="تسجيل الدخول" class="btn btn-bro m-auto">
            <div class="d-flex justify-content-center g-5">
                <a class="nav-link" href="/signup">
                    انشاء حساب جديد
                </a>
                <a class="nav-link" href="/forgetPassword">
                    هل نسيت كلمة السر ؟
                </a>
            </div>
        </form>
       
        <%- include('./partials/footer') %>
    </body>


    </html>